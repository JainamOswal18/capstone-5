          <select name="" id="">
            <option value="">Title</option>
            <option value="">Rating</option>
            <option value="">Date</option>
          </select>

          <input class="filterButton" type="submit" value="Go">
        </form>
      </div>

      <div class="books">
        <div class="coverSection">
            <!-- <img src="https://images.unsplash.com/photo-1699891730676-037bed3c1bed?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt=""> -->
